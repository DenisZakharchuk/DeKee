@model PlainElastic.Net.WebAppMVC.Models.CryptoBox.TransferModel

<div class="col-lg-6">
    <div class="col-lg-12">
        <h3 class="d-flex justify-content-between align-items-center mb-3">Transfer is @Model.Status</h3>
    </div>
    <div class="col-lg-12">
        <label class="text-muted">Date</label>
        <label class="label-primary">@(Model.Date)</label>
    </div>
    <div class="col-lg-12">
        <label class="text-muted">Amount in Cash</label>
        <label class="label-primary">@(Model.Amount) @(Model.Currency ?? "EUR")</label>
    </div>

    <div class="col-lg-12">
        <label class="text-muted">Amount in Beefy</label>
        <label class="label-primary">@(Model.BFYAmount)</label>
    </div>

    <div class="col-lg-12">
        <label class="text-muted">B4U commission</label>
        <label class="label-primary">@(Model.B4UCommission)</label>
    </div>

    <div class="col-lg-12">
        <label class="text-muted">Total</label>
        <label class="label-primary">@(Model.BFYAmount + Model.B4UCommission)</label>
    </div>


    <div class="col-lg-12">
        <label class="text-muted">Amount in BTC</label>
        <label class="label-primary">@(Model.BTCAmount)</label>
    </div>

    <div class="col-lg-12">
        <label class="text-muted">Gas</label>
        <label class="label-primary">@(Model.GasAmount)</label>
    </div>
    <div class="col-lg-12">
        <a href="" class="btn btn-primary">Another transaction</a>
        <a href="/CryptoBox/MerchantCabinet" class="btn btn-primary">To Dashboard</a>
    </div>
</div>
