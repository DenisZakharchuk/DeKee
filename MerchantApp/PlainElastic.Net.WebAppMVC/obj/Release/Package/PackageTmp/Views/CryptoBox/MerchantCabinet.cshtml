@model PlainElastic.Net.WebAppMVC.Models.CryptoBox.CabinetModel
@{
    ViewBag.Title = "Merchant cabinet";
    Layout = "~/Views/Shared/_PostLoginLayout.cshtml";

    var lnkAttr = new Dictionary<string, object>();
    lnkAttr.Add("class", "btn btn-default");
    var routeVals = new RouteValueDictionary();
}


@if (Model.Data.Any())
{
    <h2 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Welcome!</span>
    </h2>
    <hr />
    <div class="row">
        <div class="col-lg-8 widget">
            <h4>Notifications:</h4>

            <ul>
                @foreach (var item in Model.Data)
                {
                    <li>
                        <p>
                            @{
                                var localize = Model.Localization.ContainsKey(item) ? Model.Localization[item] : item;
                                var actionLink = Model.ActionLinks.ContainsKey(item) ? Model.ActionLinks[item] : item;
                            }


                            @Html.ActionLink(localize, actionLink, "CryptoBox", routeVals, lnkAttr)
                        </p>
                    </li>
                }
            </ul>
        </div>
    </div>
    <br />
}

<div class="row">
    <div class="col-md-6 widget">
        <h4 class="d-flex justify-content-between align-items-center mb-3">Transaction History</h4>
